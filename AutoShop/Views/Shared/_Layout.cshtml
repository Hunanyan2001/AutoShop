@using AutoShop.Models;
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> _userManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_LayoutUser.css" asp-append-version="true" />
</head>
<body>
    <header class="p-3 mb-3 border-bottom sticky-top">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-light text-decoration-none">
                    <svg class="bi me-2"  width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href=""></use></svg>
                    <a asp-controller="Account" asp-action="PageUser"><img class="rounded-circle" src="/img/pngwing.com.png" width="32" height="32" /></a>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-controller="Account" asp-action="PageUser" class="nav-link px-2 link-light">My Profile</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Car" asp-action="MyStatment" class="nav-link px-2 link-light">My Statment</a></li>
                        <li><a href="#" class="nav-link px-2 link-dark">Customers</a></li>
                        <li><a asp-controller="Car" asp-action="Statment" class="nav-link px-2 link-light">Statment</a></li>
                        <li><a asp-controller="Car" asp-action="ShopCar" class="nav-link px-2 link-light">Cars</a></li>
                    }
                </ul>

                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                    <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                </form>
                @if (User.Identity.IsAuthenticated)
                {
                    <p>@User.Identity.Name</p>
                    <div class="dropdown">
                         <img src="/Files/User-Profile-PNG-Picture.png" alt="mdo" width="32" height="32" class="rounded-circle">
                        <div class="dropdown-content bg-dark">
                            <form method="post" asp-controller="Account" asp-action="">
                                <input style="color:blue" class="btn btn-dark" type="submit" value="Settings" />
                            </form>
                            <form method="post" asp-controller="Account" asp-action="">
                                <input style="color:blue" class="btn btn-dark" type="submit" value="Link2" />
                            </form>
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <input style="color:blue" class="btn btn-dark" type="submit" value="Logout" />
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                }
            </div>
        </div>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AutoShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
